# HTTP VirtualHost - redirects to HTTPS
<VirtualHost *:80>
    # EDIT THIS: Your domain name
    ServerName yourdomain.com
    ServerAdmin webmaster@localhost

    # Logs
    ErrorLog ${APACHE_LOG_DIR}/gofins-error.log
    CustomLog ${APACHE_LOG_DIR}/gofins-access.log combined

    # Redirect all /gofins traffic to HTTPS
    RewriteEngine on
    RewriteCond %{REQUEST_URI} ^/gofins
    RewriteRule ^ https://%{SERVER_NAME}%{REQUEST_URI} [END,NE,R=permanent]
</VirtualHost>

# HTTPS VirtualHost - main application
<IfModule mod_ssl.c>
<VirtualHost *:443>
    # EDIT THIS: Your domain name (must match above)
    ServerName yourdomain.com
    ServerAdmin webmaster@localhost

    # SSL Configuration
    # EDIT THIS: Update paths to match your Let's Encrypt certificate
    SSLEngine on
    SSLCertificateFile /etc/letsencrypt/live/yourdomain.com/fullchain.pem
    SSLCertificateKeyFile /etc/letsencrypt/live/yourdomain.com/privkey.pem
    Include /etc/letsencrypt/options-ssl-apache.conf

    # Logs
    ErrorLog ${APACHE_LOG_DIR}/gofins-error.log
    CustomLog ${APACHE_LOG_DIR}/gofins-access.log combined

    # Authentication for /gofins path
    <Location /gofins>
        AuthType Basic
        AuthName "gofins"
        AuthUserFile /opt/gofins/deployment/.htpasswd
        Require valid-user
        
        # Pass authenticated username to backend
        RequestHeader set X-Remote-User %{REMOTE_USER}s
    </Location>

    # Proxy API requests to Go backend (port 7702)
    ProxyPreserveHost On
    ProxyPass /gofins/api http://127.0.0.1:7702/api
    ProxyPassReverse /gofins/api http://127.0.0.1:7702/api

    # Proxy UI requests to nginx container (port 7703)
    ProxyPass /gofins http://127.0.0.1:7703/
    ProxyPassReverse /gofins http://127.0.0.1:7703/

    # Required Apache modules: proxy, proxy_http, headers, ssl, rewrite
</VirtualHost>
</IfModule>
